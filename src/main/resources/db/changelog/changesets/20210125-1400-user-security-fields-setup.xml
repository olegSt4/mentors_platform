<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="oleg-stefura">
        <addColumn tableName="user">
            <column name="password" type="varchar(256)" defaultValue="tempUnHashedPass">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    
    <changeSet id="2" author="oleg-stefura">
        <addColumn tableName="user">
            <column name="registration_date" type="date" defaultValue="2021-01-01">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>
    
    <changeSet id="3" author="oleg-stefura">
        <addColumn tableName="user">
            <column name="last_visit_date" type="date" defaultValue="2021-01-01">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="4" author="oleg-stefura">
        <addColumn tableName="user">
            <column name="login" type="varchar(128)" valueComputed="email"/>
        </addColumn>
    </changeSet>
    
    <changeSet id="5" author="oleg-stefura">
        <sql>UPDATE user SET login = email</sql>
    </changeSet>
    
    <changeSet id="6" author="oleg-stefura">
        <addNotNullConstraint tableName="user" columnName="login" columnDataType="varchar(128)"/>
    </changeSet>

    <changeSet id="7" author="oleg-stefura">
        <addUniqueConstraint tableName="user" columnNames="login"/>
    </changeSet>
</databaseChangeLog>